{
  "appId": "com.taverncard.crafter",
  "productName": "Tavern Card Crafter",
  "directories": {
    "output": "build-electron"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "public",
      "to": "public"
    }
  ],
  "mac": {
    "category": "public.app-category.productivity",
    "target": "dmg"
  },
  "win": {
    "target": "portable",
    "forceCodeSigning": false,
    "sign": null
  },
  "linux": {
    "target": "AppImage",
    "category": "Office"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}